@using CarPooling.Data.Models.ViewModels;
@model IEnumerable<PassengersListViewModel>

@{
    ViewData["Title"] = "My Passengers";
}

@{
    await Html.RenderPartialAsync("_MenuPartial");
}


@if (Model.Count() == 0)
{
    <br>
    <h3> You currently have no passenger(s) yet.</h3>

}
else
{
    <div>
        <h2>Passengers:</h2>
        @foreach (var passenger in @Model)
        {
            <div class="travel-container">
                <br>
                <p><i class="fas fa-user"></i> <span class="property">Username :</span> @passenger.Username</p>
                <p><i class="fas fa-star"></i> <span class="property">Rating :</span> @passenger.AverageRating</p>
                <p><i class="fas fa-calendar"></i> <span class="property">Departure time :</span> @passenger.DepartureTime</p>
                <p><i class="fas fa-map-marker-alt"></i> <span class="property">Departure address :</span> @passenger.DepartureCity, @passenger.DepartureAddress</p>
                <p><i class="fas fa-flag"></i> <span class="property">Arrival address :</span>@passenger.ArrivalCity, @passenger.ArrivalAddress</p>
               
            </div>        
            <br>
        }
    </div>
}
<br>
<a asp-action="Menu" asp-controller="Personal" class="btn btn-secondary">Go Back</a>

