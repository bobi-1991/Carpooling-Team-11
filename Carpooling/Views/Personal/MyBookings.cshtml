@using Carpooling.Service.Dto_s.Responses;
@model IEnumerable<TripRequestResponse>

@{
    ViewData["Title"] = "My Bookings";
}


@if (Model.Count() == 0)
{
    <br>
    <p> You currently have no booking trip(s) yet.  </p>

}


@*       PassengerUsername = passengerUsername;
            DriverUsername = driverUsername;
            StartLocationDetails = startLocationDetails;
            EndLocationDetails = endLoacitonDetails;
            DepartureTime = departureTime;
            Status = status;*@


else
{

    <div>
        <h2>Trip requests:</h2>
        @foreach (var request in @Model)
        {
            <div class="travel-container">

                <br>
                <p><i class="fas fa-map-marker-alt"></i> <span class="property">Driver:</span> @request.DriverUsername</p>
                <p><i class="fas fa-flag"></i> <span class="property">Destination city:</span> @request.StartLocationDetails</p>
                <p><i class="fas fa-calendar"></i> <span class="property">Departure Time:</span> @request.EndLocationDetails</p>
                <p><i class="fas fa-clock"></i> <span class="property">Arrival Time:</span> @request.DepartureTime</p>
                <p><i class="fas fa-chair"></i> <span class="property">Available Seats:</span> @request.Status.ToString()</p>
            </div>
            <br>
        }
    </div>
}
